<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <Description>Bionic Monitor - Live reload for Blazor/Bionic projects</Description>
    <ToolCommandName>biomon</ToolCommandName>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
    <OutputType>Exe</OutputType>
    <AssemblyName>BionicMonitor</AssemblyName>
    <RootNamespace>BionicMonitor</RootNamespace>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.4.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BionicMonitorService\BionicMonitorService.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="wwwroot\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="wwwroot\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="wwwroot\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\**" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="wwwroot\.DS_Store" />
    <_ContentIncludedByDefault Remove="wwwroot\cache-polyfill.js" />
    <_ContentIncludedByDefault Remove="wwwroot\capacitor.js" />
    <_ContentIncludedByDefault Remove="wwwroot\css\App.css" />
    <_ContentIncludedByDefault Remove="wwwroot\css\App.css.map" />
    <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\bootstrap.min.css" />
